<h1>Profile</h1>
<h2><%= @user.first_name %> <%= @user.last_name %></h2>

<div id="my_campaigns">
	<h3>My Campaigns</h3>
	<% if @user.owners != [] %>
		<% @user.owners.each do |campaign| %>
			<%= link_to campaign.title, campaign_path(@user.owner.id) %>
		<% end %>
	<% else %>
		You haven't started any campaigns!
	<% end %>
</div>
<div id="my_pledges">
	<h3>My Pledges</h3> <h4>Total: <%= @user.pledge_total %></h4>
	<% if @user.pledges != [] %>
		<ul>
			<% @user.pledges.each do |pledge| %>
				<li>$<%= pledge.donation_amount %> to <%= pledge.campaign.title %></li>
			<% end %>
		</ul>
	<% else %>
		You haven't made any pledges! Wtf man...
	<% end %>
</div>